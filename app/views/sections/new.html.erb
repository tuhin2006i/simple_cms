<div class="section new">
  <h2>Create new section</h2>
  <%= form_for(:section, :url => {:action => 'create'}) do |f| %>
      <%= render(:partial => 'form', :locals => {:f => f}) %>

      <div class="form-buttons">
        <%= submit_tag("Create section") %>
      </div>

  <% end %>

</div>

